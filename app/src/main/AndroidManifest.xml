<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicstructureappproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/now_playing"
            android:parentActivityName=".MainActivity" />/>
        <activity
            android:name=".SelectSongByActivity"
            android:label="@string/select_criteria_header"
            android:parentActivityName=".MainActivity" />/>
        <activity
            android:name=".AlbumSelectActivity"
            android:label="@string/album_screen_header"
            android:parentActivityName=".MainActivity" />/>
        <activity
            android:name=".SongSelectActivity"
            android:label="@string/song_screen_header"
            android:parentActivityName=".MainActivity" />/>
    </application>

</manifest>