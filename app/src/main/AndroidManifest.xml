<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicstructureappproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NowPlaying"
            android:label="Now Playing"/>
        <activity android:name=".SelectSongBy"
            android:label="Select Criteria"/>
        <activity android:name=".AlbumSelect"
            android:label="List of Albums"/>
        <activity android:name=".SongSelect"
            android:label="List of Songs"/>
    </application>

</manifest>